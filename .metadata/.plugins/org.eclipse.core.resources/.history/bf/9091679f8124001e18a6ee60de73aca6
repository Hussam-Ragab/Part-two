/*
 * Write a C function to count the maximum number of consecutive 1â€™s in an unsigned 16 bits integer.
 *
 * */

#include <stdio.h>

int Count_Consecutive_Zeros(unsigned int num);

int main(void)
{
	unsigned int number;
	printf("enter number\n");
	fflush(stdout);
	scanf("%x",&number);
	printf("Number of Consecutive Ones = %d\n",Count_Consecutive_Zeros(number));

	return 0;
}

int Count_Consecutive_Zeros(unsigned int num)
{
	int index,counter=0,max=0;

	for(index = 0; index < 16; ++index)
	{
		if(!(num&(1<<index)))
		{
			++counter;

		}
		else if(counter > max)
		{
			max = counter;
			counter = 0;

		}
	}

	if(counter > max)
	{
		max = counter;
	}

	return max;
}

