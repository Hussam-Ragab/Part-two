/*
 * Write a C function to count the maximum number of consecutive 1â€™s in an unsigned 16 bits integer.
 *
 * */

#include <stdio.h>

int Count_Ones(unsigned char num);

int main(void)
{
	unsigned char number;
	printf("enter number\n");
	fflush(stdout);
	scanf("%x",&number);
	printf("Number of Ones = %d\n",Count_Ones(number));

	return 0;
}

int Count_Ones(unsigned char num)
{
	int index,counter=0;

	for(index = 0; index < 8; ++index)
	{
		if((num&(1<<index)))
		{
			++counter;
		}
	}

	return counter;
}

